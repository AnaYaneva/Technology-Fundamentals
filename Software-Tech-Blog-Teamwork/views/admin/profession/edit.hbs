<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="/admin/profession/edit/{{profession.id}}" method="POST">
            <fieldset>
                <legend>Edit profession</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="name">Profession Name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="name" placeholder="Profession Name" name="name" value="{{ profession.name }}">
                    </div>
                </div>
                <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <a class="btn btn-default" href="/admin/profession/all">Cancel</a>
                    <button type="submit" class="btn btn-success">Edit</button>
                </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>